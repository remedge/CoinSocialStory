							div(class='' + (coin.market.coinMarketCap.priceUSDDelta < 0 ? 'param-down' : 'param-up'))= numeral(coin.market.coinMarketCap.priceUSDDelta).format('+0.00%')
						td= numeral(coin.market.coinMarketCap.marketVolumeUSD).format('$0,0[.]00a')
