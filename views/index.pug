						th(scope='col' colspan="4") Social&nbsp;&nbsp;
						th(scope='col' colspan='5') Development 
						th(scope='col' colspan='3') Network 
					tr
						th(scope='col' colspan="2")

						th(scope='col') 
							a(href='?sortBy=price_index&order=' + (sortBy === 'price_index' ? order || 'desc' : 'desc' ) class='link' + (sortBy === 'price_index' ? '-active' : '-primary') + ' ' + (sortBy === 'price_index' ? order || 'asc' : 'asc')) Index&nbsp;&nbsp;
						th(scope='col') 
