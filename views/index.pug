							a(href='?sortBy=market_volume&order=' + (sortBy === 'market_volume' ? order || 'desc' : 'desc' ) class='link' + (sortBy === 'market_volume' ? '-active' : '-primary') + ' ' + (sortBy === 'market_volume' ? order || 'asc' : 'asc')) Market Cap&nbsp;&nbsp; 
