extends layout.pug

block content
	.container
		h1 Coin Social Story for #{name}
		p Here you can find statictics about #{name} community
		.row
			.col-4
				.card.border-success.mb-3(style='max-width: 18rem;')
					.card-header Social Index
					.card-body.text-success
						h5.card-title #{social.index}
						p.card-text
							| Social index indicates social activity of coin's community.
			.col-8
				table.table.table-striped.table-hover
					thead.thead-dark
						tr
							th(scope='col') Name
							th(scope='col') Market Cap
							th(scope='col' colspan="3") Social Activity
						tr
							th(scope='col' colspan="2") 
							th(scope='col') Followers Twitter
							th(scope='col') Tweets and Replies
							th(scope='col') Followers Reddit
					tbody
						tr
							td #{name} 
							td #{numeral(market.coinMarketCap.marketVolumeUSD).format('0,0[.]00 $')}
							td #{numeral(social.twitter.followersCount).format('0,0')}
							td #{numeral(social.twitter.statusesCount).format('0,0')}
							td #{numeral(social.reddit.followersCount).format('0,0')}
		if links
			h6 Links for 
				b #{name} 
				| coin
			ul.list-group
				each link in links
					li.list-group-item 
						-var url = link.link
						a(href="" + url) #{link.name}
				